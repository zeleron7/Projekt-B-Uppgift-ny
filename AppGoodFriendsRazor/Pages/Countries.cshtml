@page
@model MyApp.Namespace.Countries
@{
}

<div class="container px-4 py-4" id="friends-by-country">
    <h2 class="pb-2 border-bottom">Friends by country</h2>
    <p>Click on a country below to see what cities my friends are living in.</p>

    <div class="d-flex flex-wrap justify-content-start gap-4 py-5">
        @foreach (var countries in Model.countries)
        {
            <a href="Cities?country=@countries.Country" class="text-decoration-none col-12 col-md-3 col-lg-3 mb-4">
                <div class="card card-cover h-100 overflow-hidden text-bg-dark rounded-4 shadow-lg"
                    style="background-image: url('./img/unsplash-photo-3.jpg');">
                    <div class="d-flex flex-column h-100 p-5 pb-3 text-white text-shadow-1">
                        <h3 class="pt-1 mt-1 mb-4 display-6 lh-1 fw-bold">@countries.Country</h3>
                        <p class="fs-5">@countries.NrFriends Friends in @countries.City cities</p>
                    </div>
                </div>
            </a>
        }
    </div>
</div>
    
